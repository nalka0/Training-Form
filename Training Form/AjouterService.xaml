<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Training_Form"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Name="ajouterServiceWin" x:Class="Training_Form.ajouterService"
        mc:Ignorable="d"
        Title="Ajouter un service" Height="450" Width="800" Loaded="ajouterServiceWin_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="95*"/>
            <RowDefinition Height="324*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="146*"/>
            <ColumnDefinition Width="355*"/>
            <ColumnDefinition Width="291*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="annuler" Content="Annuler" HorizontalAlignment="Left" VerticalAlignment="Top" Width="89" Margin="29,233,0,0" Click="annuler_Click" Grid.Column="2" Grid.Row="1"/>
        <Button x:Name="valider" Content="Valider" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="60,233.218,0,0" Click="valider_Click" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="nomTB" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="nom" VerticalAlignment="Top" Width="120" Margin="40,73.218,0,0" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="descriptionTB" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="description" VerticalAlignment="Top" Width="120" Margin="123,61,0,0" Grid.ColumnSpan="2"/>
        <xctk:IntegerUpDown x:Name="dureeNUD" Grid.Column="2" HorizontalAlignment="Left" Margin="62,73,0,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="7.212,-7.178"/>
        <DatePicker x:Name="debutDTP" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="77,108,0,0" Grid.Row="1"/>
        <TextBox x:Name="prixHTTB" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="PrixHT" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Grid.Column="1" Margin="293,61,0,0"/>
        <TextBox x:Name="tauxTVATB" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Taux TVA" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Grid.Column="1" Margin="293,0,0,0" Grid.Row="1"/>

    </Grid>
</Window>
