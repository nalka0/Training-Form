<Window x:Class="Training_Form.ModifierArticle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Training_Form"
        mc:Ignorable="d"
        Title="ModifierArticle" Height="350" Width="650" Icon="trainingFormLogo.png">
    <Grid Margin="0,0,2,0">


        <TextBox x:Name="RefTextBox" HorizontalAlignment="Left" Height="23" Margin="35,36,0,0" TextWrapping="Wrap" Text="Reference" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="NomTextBox" HorizontalAlignment="Left" Height="23" Margin="176,36,0,0" TextWrapping="Wrap" Text="Nom" VerticalAlignment="Top" Width="178" Grid.ColumnSpan="2"/>
        <TextBox x:Name="descriptTextBox" HorizontalAlignment="Left" Height="73" Margin="35,89,0,0" TextWrapping="Wrap" Text="Desciption" VerticalAlignment="Top" Width="319" Grid.ColumnSpan="2"/>
        <TextBox x:Name="prixHTTextBox" HorizontalAlignment="Left" Height="23" Margin="35,205,0,0" TextWrapping="Wrap" Text="Prix HT" VerticalAlignment="Top" Width="319" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TVATextBox" HorizontalAlignment="Left" Height="23" Margin="35,257,0,0" TextWrapping="Wrap" Text="TVA" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="prixTTCTextBox" HorizontalAlignment="Left" Height="23" Margin="207,257,0,0" TextWrapping="Wrap" Text="Prix TTC" VerticalAlignment="Top" Width="50" IsReadOnly="True" Grid.ColumnSpan="2"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="192" Margin="395,36,0,0" Stroke="Black" VerticalAlignment="Top" Width="197"/>
        <Button x:Name="Valider" Content="Valider" HorizontalAlignment="Left" Margin="517,259,0,0" VerticalAlignment="Top" Width="75" Click="Valider_Click"/>
        <Button x:Name="Annuler" Content="Annuler" HorizontalAlignment="Left" Margin="395,259,0,0" VerticalAlignment="Top" Width="86" IsCancel="True"/>

    </Grid>
</Window>
